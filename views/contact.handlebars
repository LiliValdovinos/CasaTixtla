<section class="py-5" style="margin-top: 80px;">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold">Contáctanos</h1>
            <p class="lead">¡Ven a disfrutar del mejor pozole de Guerrero!</p>
        </div>
        
        <div class="row mb-5">
            <div class="col-lg-4 mb-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-map-marker-alt fa-3x text-warning mb-3"></i>
                        <h4>Ubicación</h4>
                        <p class="mb-3">{{restaurantInfo.address}}</p>
                        <a href="https://maps.google.com/?q={{restaurantInfo.address}}" class="btn btn-outline-primary" target="_blank">
                            <i class="fas fa-directions me-2"></i>Cómo llegar
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-phone fa-3x text-warning mb-3"></i>
                        <h4>Teléfono</h4>
                        <p class="mb-3">{{restaurantInfo.phone}}</p>
                        <a href="tel:{{restaurantInfo.phone}}" class="btn btn-outline-primary">
                            <i class="fas fa-phone me-2"></i>Llamar Ahora
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                        <h4>Horarios</h4>
                        <p class="mb-3">{{restaurantInfo.hours}}</p>
                        <a href="https://wa.me/{{restaurantInfo.whatsapp}}" class="btn btn-outline-success" target="_blank">
                            <i class="fab fa-whatsapp me-2"></i>WhatsApp
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h3 class="mb-0">Envíanos un Mensaje</h3>
                    </div>
                    <div class="card-body">
                        <form id="contactForm">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="nombre" class="form-label">Nombre completo *</label>
                                    <input type="text" class="form-control" id="nombre" name="nombre" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="telefono" class="form-label">Teléfono *</label>
                                    <input type="tel" class="form-control" id="telefono" name="telefono" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Correo electrónico</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                            <div class="mb-3">
                                <label for="asunto" class="form-label">Asunto *</label>
                                <select class="form-select" id="asunto" name="asunto" required>
                                    <option value="">Selecciona un asunto...</option>
                                    <option value="reservacion">Reservación</option>
                                    <option value="pedido">Hacer un pedido</option>
                                    <option value="evento">Evento especial</option>
                                    <option value="sugerencia">Sugerencia</option>
                                    <option value="otro">Otro</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="mensaje" class="form-label">Mensaje *</label>
                                <textarea class="form-control" id="mensaje" name="mensaje" rows="5" required placeholder="Cuéntanos en qué podemos ayudarte..."></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Enviar Mensaje
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="text-center mb-4">Encuéntranos</h3>
                <div class="ratio ratio-21x9">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3763.1272120100284!2d-99.14527862496385!3d19.406908781866967!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1fee12ac37e07%3A0x9989347928ce003e!2sCasa%20Tixtla!5e0!3m2!1ses!2smx!4v1754187381776!5m2!1ses!2smx" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        class="rounded shadow">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
// Contact form handling
document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    if (PozoleriaApp.validateForm(this)) {
        const formData = new FormData(this);
        const message = `Hola! Mi nombre es ${formData.get('nombre')}. 
        
Asunto: ${formData.get('asunto')}
Teléfono: ${formData.get('telefono')}
${formData.get('email') ? 'Email: ' + formData.get('email') : ''}

Mensaje: ${formData.get('mensaje')}`;
        
        PozoleriaApp.sendWhatsAppMessage(message);
        PozoleriaApp.Utils.showNotification('Redirigiendo a WhatsApp...', 'success');
    } else {
        PozoleriaApp.Utils.showNotification('Por favor completa todos los campos requeridos.', 'warning');
    }
});
</script>