<!-- Hero Section -->
<section id="inicio" class="hero">
    <div class="slider">
        <div id="slide-1" class="slide"></div>
        <div id="slide-2" class="slide"></div>
        <div id="slide-3" class="slide"></div>
        <div id="slide-4" class="slide"></div>
    </div>

    <div class="slider-nav">
        <a href="#slide-1"></a>
        <a href="#slide-2"></a>
        <a href="#slide-3"></a>
        <a href="#slide-4"></a>
    </div>


    <div class="hero-overlay">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6">
                    <h1 class="display-3 fw-bold text-white mb-4">
                        Auténtico Sabor <span class="text-warning">Guerrerense</span>
                    </h1>
                    <p class="lead text-light mb-4">
                        Descubre el verdadero pozole tradicional, preparado con recetas familiares 
                        que han pasado de generación en generación desde {{restaurantInfo.established}}.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="/menu" class="btn btn-warning btn-lg px-4">Ver Menú</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Menu Preview Section -->
<section id="menu-preview" class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-4 fw-bold text-dark">Nuestro Menú</h2>
            <p class="lead text-muted">Platillos preparados con ingredientes frescos y tradición guerrerense</p>
        </div>
        
        <div class="row g-4">
            <!-- Pozoles -->
            <div class="col-lg-4 col-md-6">
                <div class="menu-card h-100">
                    <div class="menu-image">
                        <img src="https://images.unsplash.com/photo-1565299624946-b28f40a0ca4b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Pozole Rojo" class="img-fluid">
                    </div>
                    <div class="menu-content">
                        <h3 class="h4 fw-bold text-center mb-3">POZOLES</h3>
                        <p class="text-muted text-center">Nuestro platillo estrella preparado con maíz cacahuazintle, carne de cerdo y especias secretas</p>
                        <div class="menu-items">
                            {{#each menuData.pozoles}}
                            <div class="d-flex justify-content-between mb-2">
                                <span>{{name}}</span>
                                <span class="fw-bold">${{price}}</span>
                            </div>
                            {{/each}}
                        </div>
                        <div class="text-center mt-3">
                            <a href="/menu" class="btn btn-outline-primary btn-sm">Ver más opciones</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Antojitos -->
            <div class="col-lg-4 col-md-6">
                <div class="menu-card h-100">
                    <div class="menu-image">
                        <img src="https://images.unsplash.com/photo-1599974579688-8dbdd335c77f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Antojitos" class="img-fluid">
                    </div>
                    <div class="menu-content">
                        <h3 class="h4 fw-bold text-center mb-3">ANTOJITOS</h3>
                        <p class="text-muted text-center">Deliciosos acompañamientos y entradas para complementar tu comida</p>
                        <div class="menu-items">
                            {{#each menuData.antojitos}}
                            <div class="d-flex justify-content-between mb-2">
                                <span>{{name}}</span>
                                <span class="fw-bold">${{price}}</span>
                            </div>
                            {{/each}}
                        </div>
                        <div class="text-center mt-3">
                            <a href="/menu" class="btn btn-outline-primary btn-sm">Ver más opciones</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bebidas -->
            <div class="col-lg-4 col-md-6">
                <div class="menu-card h-100">
                    <div class="menu-image">
                        <img src="https://images.unsplash.com/photo-1544145945-f90425340c7e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Bebidas" class="img-fluid">
                    </div>
                    <div class="menu-content">
                        <h3 class="h4 fw-bold text-center mb-3">BEBIDAS</h3>
                        <p class="text-muted text-center">Refrescantes bebidas tradicionales mexicanas y modernas</p>
                        <div class="menu-items">
                            {{#each menuData.bebidas}}
                            <div class="d-flex justify-content-between mb-2">
                                <span>{{name}}</span>
                                <span class="fw-bold">${{price}}</span>
                            </div>
                            {{/each}}
                        </div>
                        <div class="text-center mt-3">
                            <a href="/menu" class="btn btn-outline-primary btn-sm">Ver más opciones</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Preview Section -->
<section id="about-preview" class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="display-4 fw-bold mb-4">Nuestra Historia</h2>
                <p class="lead mb-4">
                    Desde {{restaurantInfo.established}}, nuestra familia ha mantenido viva la tradición del pozole auténtico guerrerense. 
                    Con más de {{restaurantInfo.experience}} años de experiencia, cada plato que servimos lleva el amor y la dedicación 
                    de tres generaciones.
                </p>
                <p class="mb-4">
                    Utilizamos únicamente ingredientes frescos y naturales, siguiendo las recetas originales 
                    que han sido el secreto de nuestro sabor inigualable.
                </p>
                <div class="row text-center mb-4">
                    <div class="col-4">
                        <h3 class="text-warning fw-bold">{{restaurantInfo.experience}}+</h3>
                        <p class="small">Años de Tradición</p>
                    </div>
                    <div class="col-4">
                        <h3 class="text-warning fw-bold">{{restaurantInfo.customers}}</h3>
                        <p class="small">Clientes Satisfechos</p>
                    </div>
                    <div class="col-4">
                        <h3 class="text-warning fw-bold">{{restaurantInfo.natural}}</h3>
                        <p class="small">Ingredientes Naturales</p>
                    </div>
                </div>
                <a href="/nosotros" class="btn btn-primary btn-lg">Conoce más sobre nosotros</a>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Cocina tradicional" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="display-5 fw-bold mb-4">¿Listo para probar el mejor pozole?</h2>
        <p class="lead mb-4">Ven a visitarnos a Casa Tixtla</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="tel:{{restaurantInfo.phone}}" class="btn btn-warning btn-lg">
                <i class="fas fa-phone me-2"></i>Llamar Ahora
            </a>
            <a href="https://wa.me/{{restaurantInfo.whatsapp}}" class="btn btn-outline-light btn-lg">
                <i class="fab fa-whatsapp me-2"></i>WhatsApp
            </a>
            <a href="/contacto" class="btn btn-outline-light btn-lg">
                <i class="fas fa-map-marker-alt me-2"></i>Cómo llegar
            </a>
        </div>
    </div>
</section>